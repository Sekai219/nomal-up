        <script>
            document.getElementById("heart").addEventListener("click", function() {
                var heart = this;
                heart.style.opacity = "0"; // 设置为渐隐
                setTimeout(function() {
                    heart.style.opacity = "1"; // 2秒后恢复
                    window.location.href = "https://520.luping.site/"; // 跳转到指定网址
                }, 2000);
            });
        </script>
